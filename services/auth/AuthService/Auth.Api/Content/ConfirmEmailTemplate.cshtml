@model string

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Confirm Your Account</title>
    <style>
        body {
            margin: 0;
            background: #fff;
            font-family: 'Open Sans', sans-serif;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        .container {
            max-width: 600px;
            margin: auto;
            border: 1px solid #EBEBEB;
            border-radius: 3px;
            padding: 44px 42px 32px;
        }

        .logo {
            width: 42px;
            height: auto;
            margin-bottom: 20px;
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
            font-size: 24px;
            margin: 0 0 18px;
            border-bottom: 1px solid #EFF1F4;
            padding-bottom: 18px;
        }

        p {
            font-size: 15px;
            line-height: 25px;
            color: #141414;
            margin: 0 0 24px;
        }

        .button {
            border: 2px solid #0666EB;
            color: #0666EB;
            text-decoration: none;
            padding: 10px 30px;
            border-radius: 40px;
            font-weight: 700;
            font-size: 16px;
            display: inline-block;
            margin-bottom: 25px;
        }

        .footer {
            border-top: 1px solid #DFE1E4;
            padding-top: 24px;
            font-size: 14px;
            color: #B4BECC;
            text-align: center;
        }
    </style>
</head>
<body>
<div class="container">
    <img class="logo"
         src="https://575a7af1-4b34-4307-b36d-071e950a1946.b-cdn.net/e/d102292f-da51-4034-af55-18b7ce0dbcb8/b7f047e4-df54-4156-95ce-145c575b17bf.png"
         alt="Logo"/>
    <h1>Confirm your account</h1>
    <p>Please click the button below to confirm your email address and finish setting up your account.</p>
    <a href="@Model" class="button">Confirm</a>
    <div class="footer">
        <strong>Mercibus</strong><br/>
        All rights reserved.
    </div>
</div>
</body>
</html>
