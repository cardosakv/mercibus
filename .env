# ============================
# Auth Service
# ============================
AUTH_DB_CONN="Server=auth-db;Port=5432;Database=mercibus_auth_db;User Id=${AUTH_DB_USER};Password=${AUTH_DB_PASS};"
JWT_KEY=your_jwt_secret_here
EMAIL_SERVER=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_SENDER=your_email@example.com
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_CONFIRM_SUCCESS=https://yourdomain.com/email-confirm-success
EMAIL_CONFIRM_FAIL=https://yourdomain.com/email-confirm-fail
PASSWORD_RESET_URL=https://yourdomain.com/password-reset

# ============================
# Auth DB
# ============================
AUTH_DB_USER=your_auth_db_user
AUTH_DB_PASS=your_auth_db_password
AUTH_DB_NAME=mercibus_auth_db

# ============================
# Catalog Service
# ============================
CATALOG_DB_CONN="Server=catalog-db;Port=5432;Database=mercibus_catalog_db;User Id=${CATALOG_DB_USER};Password=${CATALOG_DB_PASS};"

# ============================
# Catalog DB
# ============================
CATALOG_DB_USER=your_catalog_db_user
CATALOG_DB_PASS=your_catalog_db_password
CATALOG_DB_NAME=mercibus_catalog_db

# ============================
# Shared Blob Storage (Azurite or Azure)
# ============================
BLOB_CONN="DefaultEndpointsProtocol=http;AccountName=devstoreaccount1;AccountKey=your_blob_account_key_here;BlobEndpoint=http://127.0.0.1:10000/devstoreaccount1;"